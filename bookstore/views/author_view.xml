<?xml version="1.0"?>

<odoo>
  <record id="author_view_tree" model="ir.ui.view">
    <field name="name">author.view.tree</field>
    <field name="model">bookstore.author</field>
    <field name="arch" type="xml">
      <tree string="">
        <field name="name" />
      </tree>
    </field>
  </record>



  <record id="author_view_form" model="ir.ui.view">
    <field name="name">author.view.form</field>
    <field name="model">bookstore.author</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
          </group>
          <notebook>
            <page string="Books">
              <field name="author_ids" readonly="1">
                  <tree>
                      <field name="name" />
                      <field name="expceted_price" />
                      <field name="state" />
                  </tree>
              </field>
          </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="author_action" model="ir.actions.act_window">
    <field name="name">Authors</field>
    <field name="res_model">bookstore.author</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No Records Found. Let's create one!!
      </p>
      <p>
        There is no records for the Book store.
        so you can create new one if you want to sell.
      </p>
    </field>
  </record>
</odoo>