<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <record id="book_store_tag_action" model="ir.actions.act_window">
    <field name="name">Book Tags</field>
    <field name="res_model">bookstore.tag</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No Records Found. Let's create one!!
      </p>
      <p>
        There is no records for the Book Store.
        so you can create new one if you want to sell.
      </p>
    </field>
  </record>
  <record id="book_store_tags_view_form" model="ir.ui.view">
    <field name="name">book.store.tag.view.form</field>
    <field name="model">bookstore.tag</field>
    <field name="arch" type="xml">
      <form string="Book Tags">
        <sheet>
          <group>
            <field name="name" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

